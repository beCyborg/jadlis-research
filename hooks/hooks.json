{
  "description": "jadlis-research plugin hooks",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/session-init.sh\"",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/post-compact-state.sh\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__plugin_jadlis-research_firecrawl__firecrawl_search",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/firecrawl-search-block.sh\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "mcp__plugin_jadlis-research_firecrawl__firecrawl_(scrape|map|crawl|extract|check_crawl_status)",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/firecrawl-circuit-breaker.sh\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__plugin_jadlis-research_exa__.*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/exa-validation.sh\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__plugin_jadlis-research_openalex__.*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/openalex-validation.sh\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__plugin_jadlis-research_arxiv__.*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/arxiv-throttle.sh\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Agent",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/task-background-check.sh\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "WebSearch|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/websearch-gate.sh\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/scratchpad-size-guard.sh\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "(jadlis-research:)?(academic|community|expert|native-web|social-media|verification)-worker",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/subagent-stop-check.sh\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/mcp-error-recovery.sh\"",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/read-error-recovery.sh\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/stop-pipeline-check.sh\"",
            "timeout": 15
          }
        ]
      }
    ],
    "SessionEnd": []
  }
}
