{
  "description": "jadlis-research plugin hooks",
  "hooks": {
    "SessionStart": [],
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/scratchpad-size-guard.sh\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [],
    "PostToolUseFailure": [
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/mcp-error-recovery.sh\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [],
    "SessionEnd": []
  }
}
